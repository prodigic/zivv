{
  "name": "zivv",
  "private": true,
  "version": "0.13.0",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev-server.js start",
    "dev:start": "node scripts/dev-server.js start",
    "dev:stop": "node scripts/dev-server.js stop",
    "dev:status": "node scripts/dev-server.js status",
    "dev:cleanup": "node scripts/dev-server.js cleanup",
    "dev:kill": "node scripts/dev-server.js kill",
    "dev:restart": "node scripts/dev-server.js restart",
    "dev:tui": "node scripts/dev-server.js tui",
    "dev:logs": "node scripts/logs.js",
    "dev:help": "node scripts/dev-server.js help",
    "dev:legacy": "vite",
    "build": "vite build",
    "build:full": "tsc -b && vite build",
    "build:etl": "tsc --project tsconfig.build.json",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,md}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:performance": "playwright test tests/performance.spec.ts tests/lighthouse.spec.ts",
    "test:lighthouse": "playwright test tests/lighthouse.spec.ts",
    "test:smoke": "playwright test tests/smoke.spec.ts",
    "test:all": "npm run test:run && npm run test:e2e",
    "test:all:coverage": "npm run test:coverage && npm run test:e2e && npm run test:performance",
    "preetl": "node scripts/update-data.js data/latest.txt",
    "etl": "npm run build:etl && node scripts/run-etl.js",
    "etl:verbose": "npm run etl -- --verbose",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:stop": "pkill -f storybook",
    "storybook:test": "npx vitest --project=storybook",
    "storybook:test:playwright": "playwright test --config=playwright.storybook.config.ts",
    "storybook:test:smoke": "playwright test tests/storybook-smoke.spec.ts --config=playwright.storybook.config.ts",
    "storybook:test:smoke:watch": "playwright test tests/storybook-smoke.spec.ts --config=playwright.storybook.config.ts --ui",
    "storybook:watch": "node scripts/storybook-watch.js",
    "storybook:test:ci": "npm run storybook & sleep 15 && npm run storybook:test:playwright && npm run storybook:stop"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^6.28.0",
    "react-virtuoso": "^4.10.4",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.56.0",
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-onboarding": "^9.1.10",
    "@storybook/addon-vitest": "^9.1.10",
    "@storybook/react-vite": "^9.1.10",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "chokidar": "^4.0.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.10",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "storybook": "^9.1.10",
    "tailwindcss": "^3.4.16",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "@vitest/browser": "3.2.4",
    "playwright": "^1.56.0",
    "@vitest/coverage-v8": "3.2.4"
  }
}
